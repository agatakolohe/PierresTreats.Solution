@{
    Layout = "_Layout";
}

@model Inventory.Models.Treat

<div class="headers">
    <h1>Edit</h1>
    <h3>Editing: @Html.DisplayFor(model => model.TreatName)</h3>
</div>
<div class="treats">
    @using (Html.BeginForm())
    {
        @Html.HiddenFor(model => model.TreatId)

        <h4>Treat Name: @Html.EditorFor(model => model.TreatName)</h4>

        <h4>Flavors: @Html.DropDownList("FlavorId")</h4>

        <input type="submit" value="Save" class="btn btn-primary" />
    }
</div>
