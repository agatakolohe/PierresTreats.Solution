@{
    Layout = "_Layout";
}

@model Inventory.Models.Treat

<div class="headers">
    <h1>Delete Treat</h1>
    <h3>Are you sure you want to delete this treat?</h3>
    <hr />
</div>
<div class="treats">
    <h3>Treat Name: @Html.DisplayFor(model => model.TreatName)</h3>
    @using (Html.BeginForm())
    {
        <input type="submit" value="Delete" class="btn btn-danger" />
    }
</div>
