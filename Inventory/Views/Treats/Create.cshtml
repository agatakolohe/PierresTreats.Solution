@{
    Layout = "_Layout";
}

@model Inventory.Models.Treat

<div class="headers">
    <h1>Add a Treat</h1>
</div>

<div class="treats">
    @using (Html.BeginForm())
    {
        <h4>Treat Name: @Html.TextBoxFor(model => model.TreatName)</h4>

        <h4>Flavor: @Html.DropDownList("FlavorId")</h4>

        <input type="submit" value="Add new treat" class="btn btn-primary" />
    }
</div>
